---
interface Props {
  items: { label: string; href?: string }[];
}

const { items } = Astro.props;
---

<div class="border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-6 py-3">
        <nav class="text-xs text-gray-500 flex items-center gap-2" aria-label="Breadcrumb">
            {items.map((item, i) => (
                <>
                    {i > 0 && (
                        <svg class="w-3 h-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                    )}
                    {item.href ? (
                        <a href={item.href} class="hover:text-navy transition">{item.label}</a>
                    ) : (
                        <span class="text-navy font-medium">{item.label}</span>
                    )}
                </>
            ))}
        </nav>
    </div>
</div>
