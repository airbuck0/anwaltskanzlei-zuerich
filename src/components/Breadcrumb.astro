---
interface Props {
  items: { label: string; href?: string }[];
}

const { items } = Astro.props;
---

<div class="bg-gray-100 py-3">
    <div class="max-w-7xl mx-auto px-4">
        <nav class="text-sm text-gray-600" aria-label="Breadcrumb">
            {items.map((item, i) => (
                <>
                    {i > 0 && <span class="mx-2">&gt;</span>}
                    {item.href ? (
                        <a href={item.href} class="hover:text-navy">{item.label}</a>
                    ) : (
                        <span class="text-navy font-medium">{item.label}</span>
                    )}
                </>
            ))}
        </nav>
    </div>
</div>
