---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Jetzt Kontakt aufnehmen',
  description = 'Haben Sie rechtliche Fragen? Kontaktieren Sie uns für eine kostenlose Erstberatung.',
} = Astro.props;
---

<section id="kontakt" class="py-20 bg-navy text-white">
    <div class="max-w-4xl mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="font-serif text-3xl md:text-4xl font-bold mb-4">
                {title}
            </h2>
            <div class="w-16 h-1 bg-gold mx-auto mb-6"></div>
            <p class="text-lg text-blue-100 max-w-2xl mx-auto">
                {description}
            </p>
        </div>

        <div class="bg-white text-gray-800 rounded-xl p-8 md:p-10 shadow-2xl">
            <p class="text-center text-lg font-medium text-navy mb-8">Vereinbaren Sie jetzt Ihre kostenlose Erstberatung:</p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a href="tel:[TELEFON]" class="inline-flex items-center gap-3 bg-navy text-white px-8 py-4 rounded-lg font-semibold hover:bg-blue-900 transition transform hover:scale-105 shadow-md">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                    </svg>
                    [TELEFON]
                </a>
                <a href="/#kontakt" class="inline-flex items-center gap-3 bg-gold text-navy px-8 py-4 rounded-lg font-semibold hover:bg-yellow-600 transition transform hover:scale-105 shadow-md">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                    </svg>
                    Kontaktformular
                </a>
            </div>
            <p class="text-center text-sm text-gray-500 mt-6">Montag — Freitag, 08:00 — 18:00 Uhr</p>
        </div>
    </div>
</section>
