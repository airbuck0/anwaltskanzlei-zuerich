---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Jetzt Kontakt aufnehmen',
  description = 'Haben Sie rechtliche Fragen? Kontaktieren Sie uns für eine kostenlose Erstberatung.',
} = Astro.props;
---

<section id="kontakt-cta" class="py-20 bg-navy-dark text-white">
    <div class="max-w-5xl mx-auto px-6">
        <div class="md:flex md:items-center md:justify-between md:gap-12">
            <div class="mb-8 md:mb-0 md:max-w-md">
                <p class="section-label mb-3">Kontakt</p>
                <h2 class="font-serif text-3xl md:text-4xl font-bold mb-4">{title}</h2>
                <div class="w-12 h-0.5 bg-gold mb-5"></div>
                <p class="text-gray-400 leading-relaxed">{description}</p>
            </div>
            <div class="flex flex-col sm:flex-row gap-4">
                <a href="tel:[TELEFON]" class="inline-flex items-center justify-center gap-3 bg-white text-navy-dark px-7 py-4 rounded font-semibold text-sm hover:bg-gray-100 transition">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
                    [TELEFON]
                </a>
                <a href="/#kontakt" class="inline-flex items-center justify-center gap-3 bg-gold text-navy-dark px-7 py-4 rounded font-semibold text-sm hover:bg-gold-light transition">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg>
                    Kontaktformular
                </a>
            </div>
        </div>
        <p class="text-xs text-gray-500 mt-8">Montag — Freitag, 08:00 — 18:00 Uhr</p>
    </div>
</section>
