---
const web3formsKey = import.meta.env.PUBLIC_WEB3FORMS_KEY;
---

<form action="https://api.web3forms.com/submit" method="POST" class="space-y-5">
    <input type="hidden" name="access_key" value={web3formsKey}>
    <input type="hidden" name="subject" value="Neue Anfrage von anwaltskanzleizuerich.ch">
    <input type="hidden" name="from_name" value="Anwaltskanzlei Z체rich Website">
    <input type="checkbox" name="botcheck" class="hidden" style="display: none;">

    <div class="grid sm:grid-cols-2 gap-5">
        <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1.5">Name *</label>
            <input type="text" id="name" name="name" required placeholder="Ihr vollst채ndiger Name"
                   class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition">
        </div>
        <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1.5">E-Mail *</label>
            <input type="email" id="email" name="email" required placeholder="ihre@email.ch"
                   class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition">
        </div>
    </div>

    <div class="grid sm:grid-cols-2 gap-5">
        <div>
            <label for="phone" class="block text-sm font-medium text-gray-700 mb-1.5">Telefon</label>
            <input type="tel" id="phone" name="phone" placeholder="+41 44 000 00 00"
                   class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition">
        </div>
        <div>
            <label for="rechtsgebiet" class="block text-sm font-medium text-gray-700 mb-1.5">Rechtsgebiet</label>
            <select id="rechtsgebiet" name="rechtsgebiet"
                    class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition">
                <option value="">Bitte w채hlen</option>
                <option value="Familienrecht">Familienrecht</option>
                <option value="Strafrecht">Strafrecht</option>
                <option value="Arbeitsrecht">Arbeitsrecht</option>
                <option value="Erbrecht">Erbrecht</option>
                <option value="Mietrecht">Mietrecht</option>
                <option value="Vertragsrecht">Vertragsrecht</option>
                <option value="Baurecht">Baurecht</option>
                <option value="Immobilienrecht">Immobilienrecht</option>
                <option value="Migrationsrecht">Migrationsrecht</option>
                <option value="Sonstiges">Sonstiges</option>
            </select>
        </div>
    </div>

    <div>
        <label for="message" class="block text-sm font-medium text-gray-700 mb-1.5">Nachricht *</label>
        <textarea id="message" name="message" rows="5" required placeholder="Beschreiben Sie kurz Ihr Anliegen..."
                  class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded text-sm focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition resize-none"></textarea>
    </div>

    <label class="flex items-start gap-3 cursor-pointer">
        <input type="checkbox" required class="mt-1 w-4 h-4 rounded border-gray-300 text-gold focus:ring-gold">
        <span class="text-xs text-gray-500 leading-relaxed">
            Ich habe die <a href="/datenschutz" class="text-navy underline hover:text-gold transition">Datenschutzerkl채rung</a> gelesen und stimme der Verarbeitung meiner Daten zu.
        </span>
    </label>

    <button type="submit"
            class="w-full bg-gold text-navy-dark px-6 py-3.5 rounded text-sm font-semibold hover:bg-gold-light transition">
        Nachricht senden
    </button>
</form>
