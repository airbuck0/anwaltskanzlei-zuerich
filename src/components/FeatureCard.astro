---
interface Props {
  title: string;
  description: string;
  number?: string;
}

const { title, description, number } = Astro.props;
---

<div class="flex gap-5">
    {number && (
        <span class="font-serif text-4xl font-bold text-gold/30 leading-none flex-shrink-0">{number}</span>
    )}
    <div>
        <h3 class="text-lg font-bold text-navy mb-2">{title}</h3>
        <p class="text-sm text-gray-600 leading-relaxed">{description}</p>
    </div>
</div>
