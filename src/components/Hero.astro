---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  ctaText?: string;
  ctaHref?: string;
  backgroundImage: string;
  overlay?: string;
  fullHeight?: boolean;
}

const {
  title,
  subtitle,
  description,
  ctaText,
  ctaHref = '#kontakt',
  backgroundImage,
  overlay = 'rgba(15, 29, 69, 0.80), rgba(30, 58, 138, 0.65)',
  fullHeight = false,
} = Astro.props;

const heroStyle = `background: linear-gradient(to bottom, ${overlay}), url('${backgroundImage}'); background-size: cover; background-position: center;`;
const heightClass = fullHeight ? 'min-h-screen' : 'min-h-[55vh]';
---

<section class:list={[heightClass, "relative flex items-center text-white"]} style={heroStyle}>
    <!-- Subtle bottom fade -->
    <div class="absolute inset-x-0 bottom-0 h-32 bg-gradient-to-t from-white/10 to-transparent"></div>

    <div class="relative w-full max-w-7xl mx-auto px-6 py-32 md:py-40">
        <div class="max-w-3xl">
            {subtitle && (
                <p class="section-label mb-4 text-gold tracking-wide-plus">{subtitle}</p>
            )}
            <h1 class="font-serif text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-[1.1] mb-6">
                {title}
            </h1>
            <div class="w-16 h-0.5 bg-gold mb-8"></div>
            {description && (
                <p class="text-lg md:text-xl text-white/80 max-w-2xl mb-10 leading-relaxed">
                    {description}
                </p>
            )}
            {ctaText && (
                <div class="flex flex-col sm:flex-row gap-4">
                    <a href={ctaHref} class="inline-flex items-center justify-center gap-2 bg-gold text-navy-dark px-8 py-4 rounded text-base font-semibold hover:bg-gold-light transition">
                        {ctaText}
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                    </a>
                    <a href="tel:[TELEFON]" class="inline-flex items-center justify-center gap-2 border border-white/30 text-white px-8 py-4 rounded text-base font-medium hover:bg-white/10 transition">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
                        Jetzt anrufen
                    </a>
                </div>
            )}
            <slot />
        </div>
    </div>
</section>
