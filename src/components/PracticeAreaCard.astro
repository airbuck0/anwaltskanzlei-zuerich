---
interface Props {
  title: string;
  description: string;
  icon: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition transform hover:-translate-y-2 border-t-4 border-gold">
    <div class="p-8">
        <div class="w-16 h-16 bg-navy rounded-full flex items-center justify-center mb-4">
            <Fragment set:html={icon} />
        </div>
        {href ? (
            <a href={href}>
                <h3 class="font-serif text-2xl font-bold text-navy mb-3 hover:text-gold transition">{title}</h3>
            </a>
        ) : (
            <h3 class="font-serif text-2xl font-bold text-navy mb-3">{title}</h3>
        )}
        <p class="text-gray-600 mb-4">{description}</p>
    </div>
</div>
