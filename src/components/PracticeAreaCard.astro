---
interface Props {
  title: string;
  description: string;
  icon: string;
  href?: string;
}

const { title, description, icon, href } = Astro.props;
---

<div class="group bg-white border border-gray-200 rounded-lg p-7 transition-all duration-300 hover:border-gold hover:shadow-lg">
    <div class="w-12 h-12 bg-warm rounded-lg flex items-center justify-center mb-5 group-hover:bg-gold/10 transition-colors">
        <Fragment set:html={icon} />
    </div>
    {href ? (
        <a href={href} class="block">
            <h3 class="font-serif text-xl font-bold text-navy mb-2 group-hover:text-gold transition-colors">{title}</h3>
        </a>
    ) : (
        <h3 class="font-serif text-xl font-bold text-navy mb-2">{title}</h3>
    )}
    <p class="text-sm text-gray-600 leading-relaxed mb-4">{description}</p>
    {href && (
        <a href={href} class="inline-flex items-center gap-1.5 text-sm font-medium text-gold hover:text-navy transition">
            Mehr erfahren
            <svg class="w-3.5 h-3.5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
        </a>
    )}
</div>
