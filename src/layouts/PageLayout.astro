---
import BaseLayout from './BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  noindex?: boolean;
}

const { title, description, noindex = false } = Astro.props;
---

<BaseLayout title={title} description={description} noindex={noindex}>
    <Nav fixed={false} />

    <main class="max-w-3xl mx-auto px-6 py-20">
        <h1 class="font-serif text-3xl md:text-4xl font-bold text-navy mb-2">
            <slot name="title">{title.split(' - ')[0]}</slot>
        </h1>
        <div class="w-10 h-0.5 bg-gold mb-10"></div>
        <div class="prose prose-lg max-w-none prose-headings:font-serif prose-headings:text-navy prose-p:text-gray-600 prose-p:leading-relaxed prose-a:text-navy prose-a:underline prose-a:decoration-gold/40 hover:prose-a:text-gold">
            <slot />
        </div>
        <div class="mt-16 pt-8 border-t border-gray-100">
            <a href="/" class="inline-flex items-center gap-2 text-sm font-medium text-navy hover:text-gold transition">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path></svg>
                Zur√ºck zur Startseite
            </a>
        </div>
    </main>

    <Footer />
</BaseLayout>
